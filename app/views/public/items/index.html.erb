<div class="container">

  <div class ="row">
    <div class="mt-5 col-md-7"><h2><strong>商品一覧</strong><small>(全<%= @items.count %>件)</small></h2></div>
  </div>



  <div class="row">
    <% @items. each do |item| %>
      <div class="col-md-4">
        <%= image_tag item.image, size: "300x200" %><br />
        <strong><%= link_to item_path(item.id), class:"text-reset mt-2" do %><%= item.name %><% end %></strong><br />
        <strong>￥<%= item.add_tax_price.to_s(:delimited) %></strong>


      </div>



    <% end %>
  </div>
  <%=paginate @items %>

</div>