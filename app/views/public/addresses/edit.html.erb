<div class="container mt-4">
  <div class="row">
    <div class="bg-secondary col-md-3">
      <h4 class="text-light">配送先編集</h4>
    </div>
  </div>
  <%= form_with model: @address, url: address_path(@address.id), method: :patch do |f| %>
  <div class="row mt-4">
    <div>郵便番号（ハイフンなし）</div>
    <div><%= f.text_field :postal_code %></div>
  </div>
  <div class="row mt-1">
    <div>住所</div>
    <div><%= f.text_field :address, size: 60 %></div>
  </div>
  <div class="row mt-1">
    <div>宛名</div>
    <div><%= f.text_field :name %></div>
    <div class="ml-3"><%= f.submit "変更内容を保存", class: "btn btn-success" %></div>
  </div>
  <% end %>
</div>