<div class="container mt-4">
  <div class="row">
    <div class="bg-secondary col-md-3">
      <h4 class="text-light">マイページ</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 mt-4">
      <h4>登録情報</h4>
    </div>
    <div class="col-md-3 mt-4">
      <%=link_to customers_information_edit_path, class: "btn btn-success" do %>編集する<% end %>
    </div>
  </div>
  <table class="table mt-4 table-bordered">
    <thead></thead>
    <tbody>
      <tr>
        <th class="bg-light">氏名</th>
        <td><%= @customer.last_name %><%= @customer.first_name %></td>
      </tr>
      <tr>
        <th class="bg-light">カナ</th>
        <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <th class="bg-light">郵便番号</th>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <th class="bg-light">住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th class="bg-light">電話番号</th>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <th class="bg-light">メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
    </tbody>
  </table>

  <div class="row">
    <div class="col-md-3 mt-4">
      <h4>配送先</h4>
    </div>
    <div class="col-md-3 mt-4">
      <%=link_to addresses_path, class: "btn btn-primary" do %>一覧を見る<% end %>
    </div>
  </div>


  <div class="row">
    <div class="col-md-3 mt-4">
      <h4>注文履歴</h4>
    </div>
    <div class="col-md-3 mt-4">
      <%=link_to orders_path, class: "btn btn-primary" do %>一覧を見る<% end %>
    </div>
  </div>


</div>
