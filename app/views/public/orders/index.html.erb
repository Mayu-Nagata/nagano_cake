<div class="container mt-4">
  <div class="row">
    <div class="bg-secondary col-md-3">
      <h4 class="text-light">注文履歴一覧</h4>
    </div>
  </div>

  <div class="row">
    <table class="table table-bordered mt-4">
    <thead class="bg-light">
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
        <td>〒<%= order.postal_code %><br /><%= order.address %><br /><%= order.name %></td>

        <td><% order.order_details.each do |order_detail| %>
              <div><%= order_detail.item.name %></div>
            <% end %>
        </td>
        <td><%= order.total_payment %></td>
        <td><%= order.status_i18n %></td>

        <td><%= link_to order_path(order.id), class: "btn btn-primary" do  %>表示する<% end %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>