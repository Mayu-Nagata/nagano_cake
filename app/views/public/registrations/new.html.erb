<div class="bg-secondary col-md-3 mt-4 ml-5">
  <h4 class="text-light">新規会員登録</h4>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <table class="table table-borderless">
    <thead></thead>
    <tbody>
      <tr>
        <td>名前</td>
        <td><%= f.label :last_name, "(姓)" %><%= f.text_field :last_name %></td>
        <td><%= f.label :first_name, "(名)" %><%= f.text_field :first_name %></td>
      </tr>
　　　 <tr>
        <td>フリガナ</td>
        <td><%= f.label :last_name_kana, "(セイ)" %><%= f.text_field :last_name_kana %></td>
        <td><%= f.label :first_name_kana, "(メイ)" %><%= f.text_field :first_name_kana %></td>
      </tr>
      <tr>
        <td><%= f.label :email, "メールアドレス" %></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>
      <tr>
        <td><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></td>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <td><%= f.label :address, "住所" %></td>
        <td><%= f.text_field :address, size: 60 %></td>
      </tr>

      <tr>
        <td><%= f.label :telephone_number, "電話番号(ハイフンなし)" %></td>
        <td><%= f.text_field :telephone_number %></td>
      </tr>
      <tr>
        <td><%= f.label :password, "パスワード(6文字以上)" %></td>
        <% if @minimum_password_length %>
        <% end %>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
      </tr>


      <tr>
        <td><%= f.label :password, "パスワード(確認用)" %></td>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
      </tr>
  </tbody>
  </table>
<% end %>

<div class="bg-secondary mx-left col-md-5 mt-4 ml-4" style="width: 400px;">
  <h6 class="text-light">既に登録済みの方</h6>
</div>
<div class="col-md-5 mt-4 ml-4">
  <p><a href="https://8d2a67400f9149bf9723f36684acfaad.vfs.cloud9.ap-northeast-1.amazonaws.com/customers/sign_in"><u>こちら</u></a>からログインしてください。</p>
</div>

