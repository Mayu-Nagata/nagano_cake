<div class="container mt-4">
  <div class="row">
    <div class="bg-secondary col-md-3">
      <h4 class="text-light">商品一覧</h4>
    </div>
      <%= link_to new_admin_item_path, class: "btn btn-light rounded-circle p-0 shadow-sm offset-md-8", style: "width:2rem;height:2rem" do %>+<% end %>
  </div>

  <div class="row mt-4">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <tr>
        <% @items. each do |item| %>
          <td><%= item.id %></td>
          <td><u><%= link_to admin_item_path(item.id), class:"text-reset" do %><%= item.name %><% end %></u></td>
          <td><%= item.price.to_s(:delimited) %></td>
          <td><%= item.genre.name %></td>
        <% if item.is_active %>
          <td class="text-success"><strong>販売中</strong></td>
        <% else %>
          <td class="text-secondary"><strong>販売停止中</strong></td>
        <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%=paginate @items %>
  </div>
</div>