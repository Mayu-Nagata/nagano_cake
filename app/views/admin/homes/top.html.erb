<div class="container mt-4">
  <div class="row">
    <div class="bg-secondary col-md-3">
      <h4 class="text-light">注文履歴一覧</h4>
    </div>
  </div>
  <div class="row mt-4">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>

          <td><%= link_to admin_order_path(order.id), class:"text-reset" do %><u><%= order.created_at.strftime("%Y/%m/%d %H:%M:%S") %></u><% end %></td>
          <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
          <% sum=0 %>
        <% order.order_details.each do |order_detail| %>
          <% sum+= order_detail.amount %>


        <% end %>
          <td><%= sum %></td>
          <td><%= order.status_i18n %></td>

        </tr>
        <% end %>
      </tbody>
    </table>

  </div>
  <%= paginate @orders %>
</div>