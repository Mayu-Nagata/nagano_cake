<div class="container mt-4">
  <div class="row">
    <div class="bg-secondary col-md-3">
      <h4 class="text-light">会員一覧</h4>
    </div>
  </div>
  <div class="row mt-4">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <tr>
        <% @customers. each do |customer| %>
          <td><%= customer.id %></td>
          <td><u><%= link_to admin_customer_path(customer.id), class:"text-reset" do %><%= customer.last_name %><%= customer.first_name %><% end %></u></td>
          <td><%= customer.email %></td>
        <% if customer.is_deleted %>
          <td class="text-secondary"><strong>退会</strong></td>
        <% else %>
          <td class="text-success"><strong>有効</strong></td>
        <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>

  </div>
  <%= paginate @customers %>
</div>