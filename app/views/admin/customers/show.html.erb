<div class="container mt-4">
  <div class="row">
    <div class="bg-secondary col-md-4">
      <h4 class="text-light"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h4>
    </div>
  </div>

  <div class="row">
    <table class="table table-borderless">
      <thead></thead>
      <tbody>
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <td><strong>会員</strong>ステータス</td>
          <% if @customer.is_deleted %>
            <td class="text-secondary"><strong>退会</strong></td>
          <% else %>
            <td class="text-success"><strong>有効</strong></td>
        <% end %>
        </tr>
        <tr>
          <td></td>
          <td><%= link_to edit_admin_customer_path(@customer.id), class: "btn btn-success" do %>編集する<% end %></td>
          <td
        </tr>
      </tbody>
    </table>

  </div>
</div>